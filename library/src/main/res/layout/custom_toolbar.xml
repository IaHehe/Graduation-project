<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    android:title="@null"
    android:navigationIcon="@null"
    app:popupTheme="@style/AppTheme.PopupOverlay">

    <TextView
        android:id="@+id/lt_main_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="22dp"
        android:minHeight="32dp"
        android:lines="1"
        android:text="@null"
        android:gravity="center"
        android:drawableLeft="@mipmap/icon_return"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_14sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lt_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:lines="1"
        android:textColor="@android:color/white"
        android:text="@string/app_name"
        android:textSize="@dimen/text_size_18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lt_main_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/layout_margin_16dp"
        android:lines="1"
        android:gravity="center"
        android:visibility="visible"
        android:textColor="@android:color/white"
        android:text="@null"
        android:textSize="@dimen/text_size_14sp" />
</android.support.v7.widget.Toolbar>