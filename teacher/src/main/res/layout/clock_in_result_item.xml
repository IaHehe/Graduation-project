<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_clock_in_result"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_stu_no_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_cardview_color"
                    android:textSize="12sp"
                    tools:text="学号：" />
                <TextView
                    android:id="@+id/tv_clock_in_result_stu_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_cardview_color"
                    android:textSize="12sp"
                    android:text="2013440020"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_stu_clock_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorLightYellow"
                android:background="@drawable/rect_lightyellow_broder_shade"
                android:padding="@dimen/padding_2dp"
                android:textSize="10sp"
                tools:text="正常" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp">
            <TextView
                android:id="@+id/tv_stu_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_cardview_color"
                android:textSize="12sp"
                tools:text="姓名：" />
            <TextView
                android:id="@+id/tv_clock_in_result_stu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_cardview_color"
                android:textSize="12sp"
                android:text="邹东军"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp">
            <TextView
                android:id="@+id/tv_stu_class_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_cardview_color"
                android:textSize="12sp"
                tools:text="班级：" />
            <TextView
                android:id="@+id/tv_clock_in_result_stu_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_cardview_color"
                android:textSize="12sp"
                android:text="计科1302"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/divider" />
    </LinearLayout>

</android.support.v7.widget.CardView >
