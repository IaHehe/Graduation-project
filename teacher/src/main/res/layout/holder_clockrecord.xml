<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="10dp"
    app:cardUseCompatPadding="false"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#5a5a5a"
                android:textSize="14sp"
                tools:text="数据结构基础" />

            <TextView
                android:id="@+id/tv_clock_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorLightYellow"
                android:background="@drawable/rect_lightyellow_broder_shade"
                android:padding="@dimen/padding_2dp"
                android:textSize="10sp"
                tools:text="正常" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp">
            <TextView
                android:id="@+id/tv_teacher_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_cardview_color"
                android:textSize="12sp"
                tools:text="任课教师：" />
            <TextView
                android:id="@+id/tv_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_cardview_color"
                android:textSize="12sp"
                android:text="张磊"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp">
            <TextView
                android:id="@+id/tv_class_room_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_cardview_color"
                android:textSize="12sp"
                tools:text="上课地点：" />
            <TextView
                android:id="@+id/tv_class_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_cardview_color"
                android:textSize="12sp"
                android:text="A105"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_week_and_weekonday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_cardview_color"
                android:layout_weight="1"
                android:textSize="12sp"
                tools:text="第二周 / 星期一" />

            <TextView
                android:id="@+id/tv_data_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_cardview_color"
                android:textSize="12sp"
                tools:text="2015-12-01" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/divider" />
    </LinearLayout>
</android.support.v7.widget.CardView>